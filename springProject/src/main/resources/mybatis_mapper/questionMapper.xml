<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.group3.springProject.mapper.QuestionMapper">
	<resultMap type="QnaBoard" id="QnaBoardMap">
	<id column="qnaboard_no" property="qnaboard_no"/>
	<result column="qnaboard_title" property="qnaboard_title"/>
	<result column="qnaboard_content" property="qnaboard_content"/>
	<result column="user_id" property="user_id"/>
	<result column="post_time" property="post_time"/>
	</resultMap>
	<select id="selectQnaAll" resultType="QnaBoard">
		SELECT * FROM QNABOARD LIMIT #{startRow}, #{row}
	</select>
	<select id="selectQnaAllCount" resultType="int">
		SELECT COUNT(*) FROM QNABOARD
	</select>
	<select id="selectFaqAll" resultType="FaqBoard">
		SELECT * FROM FAQBOARD LIMIT #{startRow}, #{row}
	</select>
	<select id="selectFaqAllCount" resultType="int">
		SELECT COUNT(*) FROM FAQBOARD
	</select>
	<select id="selectQnaFindOne" resultMap="QnaBoardMap">
		SELECT * FROM QNABOARD WHERE qnaboard_no=#{qnaboardNo}
	</select>
	<select id="selectFaqCategory" resultType="FaqBoard">
		SELECT * FROM FAQBOARD WHERE faq_division_no = #{faq_division_no} LIMIT #{startRow}, #{row}
	</select>
	<select id="selectFaqCategoryCount" resultType="int">
		SELECT COUNT(*) FROM FAQBOARD WHERE faq_division_no = #{faq_division_no}
	</select>
</mapper>